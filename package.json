{
    "name": "@obusk/warcraftlogs-search",
    "private": true,
    "description": "Thing to try to find rankings on Warcraftlogs",
    "keywords": [
        "warcraftlogs",
        "wcl",
        "world of warcraft",
        "wow",
        "wowanalyzer"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/warcraftlogs-search.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "18.x",
        "npm": "10.x"
    },
    "volta": {
        "node": "20.17.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev -p 3001",
        "build": "next build",
        "start": "next start -p 3001",
        "lint": "next lint --ignore-path .gitignore",
        "postlint": "npm run prettier",
        "lint-fix": "next lint --ignore-path .gitignore --fix",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --check",
        "postlint-fix": "npm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "downshift": "^9.0.8",
        "lucide-react": "^0.451.0",
        "next": "14.2.11",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "tailwind-merge": "^2.5.2",
        "tailwindcss": "^3.4.11"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "^0.4.9",
        "@types/node": "22.5.5",
        "@types/react": "18.3.5",
        "@types/react-dom": "18.3.0",
        "autoprefixer": "^10.4.20",
        "encoding": "^0.1.13",
        "eslint": "^8.51.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "simple-git-hooks": "^2.11.1",
        "typescript": "~5.4.0"
    }
}
