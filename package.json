{
    "name": "@obusk/nextjs-prettier-boiler",
    "private": true,
    "description": "Github Repo template for a next.js project with linting, strictness and CI setup",
    "keywords": [
        "eslint",
        "nextjs",
        "prettier",
        "template",
        "typescript",
        "vercel"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/nextjs-prettier-boilerplate.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "18.x",
        "npm": "10.x"
    },
    "volta": {
        "node": "18.17.1",
        "npm": "10.0.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint --ignore-path .gitignore",
        "postlint": "npm run prettier",
        "lint-fix": "next lint --ignore-path .gitignore --fix",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --check",
        "postlint-fix": "npm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "next": "13.4.19",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.3.3"
    },
    "devDependencies": {
        "@types/node": "20.5.9",
        "@types/react": "18.2.21",
        "@types/react-dom": "18.2.7",
        "autoprefixer": "10.4.15",
        "eslint": "8.48.0",
        "eslint-config-next": "13.4.19",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-testing-library": "^6.0.1",
        "jest": "^27.5.1",
        "lint-staged": "^14.0.1",
        "postcss": "8.4.29",
        "prettier": "^3.0.3",
        "simple-git-hooks": "^2.9.0",
        "typescript": "5.2.2"
    }
}
