{
    "name": "@obusk/warcraftlogs-search",
    "private": true,
    "description": "Thing to try to find rankings on Warcraftlogs",
    "keywords": [
        "warcraftlogs",
        "wcl",
        "world of warcraft",
        "wow",
        "wowanalyzer"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/oBusk/warcraftlogs-search.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "18.x",
        "npm": "10.x"
    },
    "volta": {
        "node": "18.18.2",
        "npm": "10.2.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev -p 3001",
        "build": "next build",
        "start": "next start -p 3001",
        "lint": "next lint --ignore-path .gitignore",
        "postlint": "npm run prettier",
        "lint-fix": "next lint --ignore-path .gitignore --fix",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --check",
        "postlint-fix": "npm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --write",
        "lint-staged": "lint-staged",
        "test": "jest --watch",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "downshift": "^8.2.2",
        "lucide-react": "^0.287.0",
        "next": "13.5.5",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwind-merge": "^1.14.0",
        "tailwindcss": "^3.3.4"
    },
    "devDependencies": {
        "@types/node": "20.8.6",
        "@types/react": "18.2.28",
        "@types/react-dom": "18.2.13",
        "autoprefixer": "^10.4.16",
        "encoding": "^0.1.13",
        "eslint": "8.51.0",
        "eslint-config-next": "13.5.5",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.4.2",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-testing-library": "^6.1.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.0.1",
        "postcss": "^8.4.31",
        "prettier": "^3.0.3",
        "simple-git-hooks": "^2.9.0",
        "typescript": "5.2.2"
    }
}
