{
    "name": "@obusk/warcraftlogs-search",
    "private": true,
    "version": "",
    "type": "module",
    "description": "Thing to try to find rankings on Warcraftlogs",
    "keywords": [
        "warcraftlogs",
        "wcl",
        "world of warcraft",
        "wow",
        "wowanalyzer"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oBusk/warcraftlogs-search.git"
    },
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": "24.x"
    },
    "devEngines": {
        "runtime": {
            "name": "node",
            "version": "^24.12.0",
            "onFail": "download"
        },
        "packageManager": {
            "name": "pnpm",
            "version": "10.25.0",
            "onFail": "download"
        }
    },
    "packageManager": "pnpm@10.25.0",
    "simple-git-hooks": {
        "pre-commit": "pnpm run lint-staged"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ],
        "**/*.{md,yml,yaml,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev --turbopack -p 3001",
        "build": "next build",
        "start": "next start -p 3001",
        "lint": "eslint .",
        "postlint": "pnpm run prettier",
        "lint-fix": "eslint --fix .",
        "prettier": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --ignore-path .prettierignore --check",
        "postlint-fix": "pnpm run prettier-fix",
        "prettier-fix": "prettier **/*.{md,yml,yaml,json} --ignore-path .gitignore --ignore-path .prettierignore --write",
        "lint-staged": "lint-staged",
        "test": "jest",
        "test-ci": "jest --ci"
    },
    "dependencies": {
        "@vercel/analytics": "^1.6.1",
        "downshift": "^9.0.13",
        "lucide-react": "^0.562.0",
        "next": "16.1.1",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@obusk/eslint-config-next": "^16.0.1-0",
        "@types/jest": "^30.0.0",
        "@types/node": "24.10.2",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "autoprefixer": "^10.4.23",
        "babel-plugin-react-compiler": "^1.0.0",
        "encoding": "^0.1.13",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "simple-git-hooks": "^2.13.1",
        "tailwindcss": "^3.4.18",
        "typescript": "~5.9.3"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "19.2.7",
            "@types/react-dom": "19.2.3"
        }
    }
}
