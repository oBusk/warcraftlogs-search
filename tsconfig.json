{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "^/*": ["./app/*"]
        },
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "types": ["@remix-run/node", "vite/client"]
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.mts"],
    "exclude": ["node_modules", "build"]
}
